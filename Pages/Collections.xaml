<Page x:Class="WPFUIKitProfessional.Pages.Collections"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="Transparent"
      d:DesignHeight="700" d:DesignWidth="1100"
      FontFamily="Poppins">

    <Border CornerRadius="10" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <UniformGrid Rows="1" Columns="3" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- WiFi Card -->
                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
                        Style="{DynamicResource CardBorderStyle1}" Padding="0,40" Height="550" Margin="0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Image Source="/Assets/Home/wifi.png" Height="50" HorizontalAlignment="Center"/>
                        <Label Content="WiFi Networks" FontSize="15" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" Margin="0,20,0,20"/>
                        <DataGrid x:Name="wifiDataGrid"
                                  AutoGenerateColumns="False"
                                  Background="White"
                                  BorderBrush="#FF496FFF"
                                  BorderThickness="1"
                                  FontWeight="Bold"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  ColumnHeaderHeight="40"
                                  AlternatingRowBackground="#F9F9F9"
                                  RowBackground="White"
                                  Margin="20,0,20,0"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#FF496FFF" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="Height" Value="40" />
                                    <Setter Property="Padding" Value="10,0,10,0" />
                                    <Setter Property="BorderBrush" Value="#FF496FFF" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Margin" Value="0,0,0,5" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="15,5,15,5" />
                                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                                    <Setter Property="BorderBrush" Value="#E0E0E0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="WiFi Name" Binding="{Binding ProfileName}" Width="*" />
                                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock x:Name="StatusText" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Download Card -->
                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
                        Style="{DynamicResource CardBorderStyle1}" Padding="0,40" Height="550" Margin="20,0,20,0">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Image Source="/Assets/78.png" Height="50" HorizontalAlignment="Center"/>
                        <Label Content="Windows 10 by bibon" FontSize="15" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" Margin="0,20,0,20"/>
                        <Grid Height="50" Margin="0,0,0,10">
                            <Button Style="{DynamicResource PrimaryButtonStyle1}" x:Name="OpenWebsiteButton1"
          Content="Download"
          Click="OpenWebsiteButton1_Click" VerticalAlignment="Center"/>
                        </Grid>
                      
                        <TextBlock Foreground="{DynamicResource PrimaryTextColor}" Name="InfoTextBox"
                                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                   TextWrapping="Wrap" FontSize="14" Margin="20,0,20,0" Background="{x:Null}"/>
                    </StackPanel>
                </Border>

                <!-- Password Generator Card -->
                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
                        Style="{DynamicResource CardBorderStyle1}" Padding="0,40,0,10" Height="550">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Image Source="/Assets/Home/generatkey.png" Height="50" HorizontalAlignment="Center"/>
                        <Label Content="Generate password" FontSize="15" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextColor}" Margin="0,20,0,20" HorizontalAlignment="Center"/>
                        <TextBox Name="PasswordBox" IsReadOnly="True" FontSize="20"
                                 BorderBrush="#FF496FFF" Margin="20,0,20,20" HorizontalContentAlignment="Center"/>
                        <Grid Height="50" Margin="0,0,0,10">
                            <Button Style="{DynamicResource PrimaryButtonStyle1}" Content="GENERATE" Click="GeneratePassword" VerticalAlignment="Center"/>
                        </Grid>

                         
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Grid>
                                <Button Click="DecreaseLength" Panel.ZIndex="1" Opacity="0"/>
                                <Ellipse Fill="{DynamicResource SecundaryBackgroundColor}" Height="50" Width="50"/>
                                <Label Foreground="{DynamicResource PrimaryTextColor}" FontSize="36"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">-</Label>
                            </Grid>
                            <TextBlock Name="PasswordLength" Text="8" Margin="10,0,10,0"
                                       VerticalAlignment="Center" FontSize="24"
                                       Foreground="{DynamicResource PrimaryTextColor}"/>
                            <Grid>
                                <Button Click="IncreaseLength" Panel.ZIndex="1" Opacity="0"/>
                                <Ellipse Fill="{DynamicResource SecundaryBackgroundColor}" Height="50" Width="50"/>
                                <Label Foreground="{DynamicResource PrimaryTextColor}" FontSize="36"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">+</Label>
                            </Grid>
                        </StackPanel>
                        <Border Background="{DynamicResource SecundaryBackgroundColor}" Padding="10"
                                CornerRadius="10" Margin="20,0,20,0">
                            <StackPanel>
                                <CheckBox Foreground="{DynamicResource PrimaryTextColor}" Name="IncludeUppercase"
                                          Content="Capitalize letter" IsChecked="True" Margin="0,5"
                                          BorderBrush="#FF496FFF" FontSize="14"/>
                                <CheckBox Foreground="{DynamicResource PrimaryTextColor}" Name="IncludeNumbers"
                                          Content="Number" IsChecked="True" Margin="0,5"
                                          BorderBrush="#FF496FFF" FontSize="14"/>
                                <CheckBox Foreground="{DynamicResource PrimaryTextColor}" Name="IncludeLowercase"
                                          Content="Lowercase letters" IsChecked="True" Margin="0,5"
                                          BorderBrush="#FF496FFF" FontSize="14"/>
                                <CheckBox Foreground="{DynamicResource PrimaryTextColor}" Name="IncludeSymbols"
                                          Content="Symbolism" IsChecked="True" Margin="0,5"
                                          BorderBrush="#FF496FFF" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Foreground="{DynamicResource PrimaryTextColor}" Name="InfoTextBox1"
                                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                   TextWrapping="Wrap" FontSize="14" Margin="20,10,20,0" Background="{x:Null}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>
    </Border>
</Page>