                                <Button x:Name="OpenWebsiteButton15" Click="OpenWebsite15_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="NVIDIA DRIVER" HorizontalAlignment="Center" VerticalAlignment="Center"/>
