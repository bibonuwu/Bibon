<Page x:Class="WPFUIKitProfessional.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"                                                        
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUIKitProfessional.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1100"
     FontFamily="Poppins">





    <Page.Resources>


        <Style TargetType="Button">
            
            
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="3" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="#FF0084FF">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                       
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
            
        </Style>
    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <StackPanel >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    
     
                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
Style="{DynamicResource CardBorderStyle1}" Padding="0,0,0,0" Height="300" Margin="20,20,0,0">
                    
                    <StackPanel Margin="0,20,0,0">
                    
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/1.png" Margin="0,0,10,0" StretchDirection="DownOnly" Width="20"/>
                    <Label Content="FPS Speed" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                    <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20" Margin="10,0,0,0"/>

                </StackPanel>

                <StackPanel Margin="20,20,20,20" Cursor="">

                                <Grid Height="50">
                                    <Button Name="btnExecute" Click="btnExecute_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="High performance" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <Grid Height="50">
                                    <Button Name="btnDisableBackgroundApps" Click="btnDisableBackgroundApps_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="Background App off" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Height="50">
                                    <Button Name="btnDisableBackgroundApps2" Click="btnDisableBackgroundApps2_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="Taskmgr" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
                                <Grid Height="50">
                                    <Button Name="btnDisableBackgroundApps3" Click="btnDisableBack3groundApps2_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="Taskbar optimization" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                            </StackPanel>
                        
                </StackPanel>

                </Border>

                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
Style="{DynamicResource CardBorderStyle1}" Padding="0,0,0,0" Height="300" Margin="20,20,0,0">

                    <StackPanel Margin="0,20,0,0">



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Assets/4.png" Margin="0,0,10,0" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Activation" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                                <Image Source="/Assets/4.png" StretchDirection="DownOnly" Width="20" Margin="10,0,0,0"/>

                        </StackPanel>


                        <StackPanel Margin="20,20,20,0">
                                <Grid Height="50">

                                    <Button Name="btnExecutePowerShell" Click="ExecutePowerShell_Click" Content="Windows" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Height="50">

                                    <Button Name="btnoffice" Click="btnoffice_Click" Content="Office" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>



                                <Grid Height="50">

                                    <Button Name="btnOpenWebsite" Click="btnOpenWebsite_Click" Content="VM Workstation" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Height="50">

                                    <Button Name="btnOpenWebsite1" Click="btnOpenWebsite_Click1" Content="Crack apps" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                    </StackPanel>

                </Border>




                    <Border Background="{DynamicResource SecundaryBackgroundColor1}"
Style="{DynamicResource CardBorderStyle1}" Padding="0,0,0,0" Height="300" Margin="20,20,0,0" Width="420">

                        <StackPanel Margin="0,20,0,0">



                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/3.png" Margin="0,0,10,0" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Info System" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                                <Image Source="/Assets/3.png" StretchDirection="DownOnly" Width="20" Margin="10,0,0,0"/>

                            </StackPanel>


                            <StackPanel x:Name="InfoStackPanel" Margin="20,20,20,20" />


                        </StackPanel>

                    </Border>
                </StackPanel>

              

                <Border Background="{DynamicResource PrimaryBackgroundColor}" Height="10" Margin="0,20,0,20" />

                <StackPanel Orientation="Horizontal">
                    
           

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Border Background="{DynamicResource SecundaryBackgroundColor1}"
Style="{DynamicResource CardBorderStyle1}" Padding="0,0,0,0" Height="230" Width="400">
                        
              

                        <StackPanel>


                        <StackPanel Orientation="Horizontal" Margin="0,20,0,10" HorizontalAlignment="Center">
                            <Image Source="/Assets/8.png" Margin="0,0,10,0" StretchDirection="DownOnly" Width="20"/>
                            <Label Content="Wallpaper" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <Image Source="/Assets/8.png" StretchDirection="DownOnly" Width="20" Margin="10,0,0,0"/>

                        </StackPanel>



                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">


                                    <Button x:Name="Button13" Margin="3" Height="130" Width="110" Click="Button_Click_13">
                                        <Button.Background>
                                            <ImageBrush ImageSource="/Assets/Wallpaper/44.jpg" Stretch="UniformToFill"/>
                                        </Button.Background>
                                    </Button>
                                    <Button x:Name="Button16" Margin="3" Height="130" Width="110" Click="Button_Click_16">
                                        <Button.Background>
                                            <ImageBrush ImageSource="/Assets/Wallpaper/43.jpg" Stretch="UniformToFill"/>
                                        </Button.Background>
                                    </Button>
                                    <Button x:Name="Button17" Margin="3" Height="130" Width="110" Click="Button_Click_17">
                                        <Button.Background>
                                            <ImageBrush ImageSource="/Assets/Wallpaper/41.jpg" Stretch="UniformToFill"/>
                                        </Button.Background>
                                    </Button>




                                </StackPanel>
                            </StackPanel>
                    </Border>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <Border Background="{DynamicResource SecundaryBackgroundColor1}"
Style="{DynamicResource CardBorderStyle1}" Padding="0,0,0,0" Height="230" Width="620">

                            <StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,20,0,20" HorizontalAlignment="Center">
                                    <Image Source="/Assets/ic_near.png" Margin="0,0,10,0" StretchDirection="DownOnly" Width="30"/>
                                    <Label Content="Block sites GAME" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                                    <Image Source="/Assets/ic_near.png" StretchDirection="DownOnly" Width="30" Margin="10,0,0,0"/>

                                </StackPanel>
                                <StackPanel
    Orientation="Vertical"
    HorizontalAlignment="Center"
    VerticalAlignment="Center" Margin="20,0,0,0">
                                    
                                    <Label Content="Ойындар сайтын бұғаттайды"
   Style="{DynamicResource FreeTeamIconLabelsStyle1}"/>

                                    <Label Content="Windows-қа оптимизация және системаның жалдамдығын жақсартады! (click FPS Speed)"
   Margin="0 10 0 10"
   Style="{DynamicResource FreeTeamIconLabelsStyle1}"/>

                                    <Label Content="Обойды өзгертуге болады! (click Wallpaper)"
   Style="{DynamicResource FreeTeamIconLabelsStyle1}"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <Grid Height="50" Margin="0,0,10,0">
                                            <Button Name="btnOpenWeb1site" Click="Button_Click" Content="Blocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>

                                        <Grid Height="50">
                                            <Button Name="btnOpen1Web1site" Click="DeleteHostsFile" Content="Unblocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>

                                    </StackPanel>
                                 

                                </StackPanel>
                            </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Page>
