<Page x:Class="WPFUIKitProfessional.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"                                                        
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUIKitProfessional.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1100"
     FontFamily="Poppins">





    <Page.Resources>


        <Style TargetType="Button">



            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="3" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="#FF0084FF">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>


        </Style>
    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                
                
                <Border Background="{DynamicResource SecundaryBackgroundColor1}"  Margin="20,20,10,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                        <StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="FPS Speed" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>






                        <Grid Height="50">
                            <Button Name="btnDisableBackgroundApps3" Click="btnDisableBack3groundApps2_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="Style by bibon"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/4.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Activation" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/4.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>
                            <Grid Height="50">
                            <Button Name="btnExecutePowerShell" Click="ExecutePowerShell_Click" Content="Windows / Office" Style="{DynamicResource PrimaryButtonStyle1}"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                            </Grid>

                        </StackPanel>

                    </Border>

                <Border Background="{DynamicResource SecundaryBackgroundColor1}" Grid.Column="1" Margin="10,20,10,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                        <StackPanel>


                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <Image Source="/Assets/8.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Wallpaper" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/8.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="WallpaperButton43" Margin="3" Height="130" Width="110" Click="Button_Click_16">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Assets/Wallpaper/43.jpg" Stretch="UniformToFill"/>
                                    </Button.Background>
                                </Button>
                                <Button x:Name="WallpaperButton41" Margin="3" Height="130" Width="110" Click="Button_Click_17">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Assets/Wallpaper/41.jpg" Stretch="UniformToFill"/>
                                    </Button.Background>
                                </Button>
                            </StackPanel>

                        </StackPanel>

                    </Border>

                <Border Background="{DynamicResource SecundaryBackgroundColor1}" Grid.Column="2"  Margin="10,20,20,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                    <StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Image Source="/Assets/ic_near.png" StretchDirection="DownOnly" Width="20"/>
                            <Label Content="Block sites GAME" FontSize="25" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                            <Image Source="/Assets/ic_near.png" StretchDirection="DownOnly" Width="20"/>

                        </StackPanel>
                        <StackPanel
 Orientation="Vertical">

                          
                            <StackPanel>
                                <Grid Height="50">
                                    <Button Name="btnOpenWeb1site" Click="Button_Click" Content="Blocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>

                                <Grid Height="50">
                                    <Button Name="btnOpen1Web1site" Click="DeleteHostsFile" Content="Unblocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>

                            </StackPanel>


                        </StackPanel>
                    </StackPanel>

                </Border>
                </Grid>


            <Border Background="{DynamicResource PrimaryBackgroundColor}" Height="10" Grid.Row="1" />


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">





                      
                </StackPanel>
        </Grid>
    </Border>
</Page>
