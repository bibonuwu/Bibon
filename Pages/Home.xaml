<Page x:Class="WPFUIKitProfessional.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"                                                        
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFUIKitProfessional.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1100"
     FontFamily="Poppins">





    <Page.Resources>


        <Style TargetType="Button">



            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="3" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="#FF0084FF">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>


        </Style>
    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>

                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>



                    <Border Background="{DynamicResource SecundaryBackgroundColor1}"  Margin="20,20,10,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                        <StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="FPS Speed" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>






                            <Grid Height="50">
                                <Button Name="btnDisableBackgroundApps3" Click="btnDisableBack3groundApps2_Click" Style="{DynamicResource PrimaryButtonStyle1}" Content="Booster by bibon"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/4.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Activation" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/4.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>
                            <Grid Height="50">
                                <Button Name="btnExecutePowerShell" Click="ExecutePowerShell_Click" Content="Windows / Office" Style="{DynamicResource PrimaryButtonStyle1}"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                            </Grid>

                        </StackPanel>

                    </Border>

                    <Border Background="{DynamicResource SecundaryBackgroundColor1}" Grid.Column="1" Margin="10,20,20,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                        <StackPanel>


                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <Image Source="/Assets/8.png" StretchDirection="DownOnly" Width="20"/>
                                <Label Content="Wallpaper" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                <Image Source="/Assets/8.png" StretchDirection="DownOnly" Width="20"/>

                            </StackPanel>



                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="WallpaperButton43" Margin="3" Height="130" Width="110" Click="Button_Click_16">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Assets/Wallpaper/43.jpg" Stretch="UniformToFill"/>
                                    </Button.Background>
                                </Button>
                                <Button x:Name="WallpaperButton41" Margin="3" Height="130" Width="110" Click="Button_Click_17">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Assets/Wallpaper/41.jpg" Stretch="UniformToFill"/>
                                    </Button.Background>
                                </Button>
                            </StackPanel>

                        </StackPanel>

                    </Border>



                </Grid>


                <Border Background="{DynamicResource PrimaryBackgroundColor}" Height="10" Grid.Row="1" />

                <Grid Grid.Row="2">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>


                        <Border Background="{DynamicResource SecundaryBackgroundColor1}"  Margin="20,20,10,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                            <StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>
                                    <Label Content="Antivirus security" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                    <Image Source="/Assets/1.png" StretchDirection="DownOnly" Width="20"/>

                                </StackPanel>






                                <Grid Height="50">
                                    <Button Name="Defender" Click="clDefender" Style="{DynamicResource PrimaryButtonStyle1}" Content="Windows Defender"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>

                                <Grid Height="50">
                                    <Button Name="Malwarebytes" Click="clMalwarebytes" Content="Malwarebytes" Style="{DynamicResource PrimaryButtonStyle1}"  HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>

                            </StackPanel>

                        </Border>

                        <Border Background="{DynamicResource SecundaryBackgroundColor1}" Grid.Column="1"  Margin="10,20,20,20" Padding="30,30,30,30" CornerRadius="20,20,20,20">

                            <StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Image Source="/Assets/ic_near.png" StretchDirection="DownOnly" Width="20"/>
                                    <Label Content="Block sites GAME" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="10,0,10,0"/>
                                    <Image Source="/Assets/ic_near.png" StretchDirection="DownOnly" Width="20"/>

                                </StackPanel>
                                <StackPanel
Orientation="Vertical">


                                    <StackPanel>
                                        <Grid Height="50">
                                            <Button Name="btnOpenWeb1site" Click="Button_Click" Content="Blocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                        </Grid>

                                        <Grid Height="50">
                                            <Button Name="btnOpen1Web1site" Click="DeleteHostsFile" Content="Unblocking" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                        </Grid>

                                    </StackPanel>


                                </StackPanel>
                            </StackPanel>

                        </Border>


                    </Grid>

                    <Grid Grid.Row="1">
                        <Border Background="{DynamicResource SecundaryBackgroundColor1}" Padding="30,10,30,10" CornerRadius="20,20,20,20" Margin="20,0,20,0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Assets/cookielogo.png" StretchDirection="DownOnly" Width="20"/>

                                    <Label Content="Cookies looking" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" Margin="5,0,0,0"/>

                                </StackPanel>
                           

                                <Grid Height="50" Grid.Column="1">
                                    <Button Name="btnOpdenWeb1site" Click="Button_Click_2" Content="View" Style="{DynamicResource PrimaryButtonStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>
                            </Grid>

                        </Border>


                    </Grid>
                </Grid>



            </Grid>

            <Border Background="{DynamicResource PrimaryBackgroundColor}" Width="10" Grid.Column="1" />

            <Grid Grid.Column="2">

                <Border Background="{DynamicResource SecundaryBackgroundColor1}"
           Padding="0,40" Margin="20,20,20,20" CornerRadius="20,20,20,20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Image Source="/Assets/Home/wifi.png" Height="50" HorizontalAlignment="Center"/>
                            <Label Content="WiFi Networks"  FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" Margin="0,20,0,17"/>
                            <DataGrid x:Name="wifiDataGrid"
AutoGenerateColumns="False"
Background="White"
BorderBrush="#FF496FFF"
BorderThickness="1"
HeadersVisibility="Column"
GridLinesVisibility="None"
CanUserAddRows="False"
IsReadOnly="True"
ColumnHeaderHeight="40"
AlternatingRowBackground="#F9F9F9"
RowBackground="White"
Margin="20,0,20,0"
ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="15" FontFamily="Segoe UI">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#FF496FFF" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontFamily" Value="Segoe UI" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Height" Value="40" />
                                        <Setter Property="Padding" Value="10,0,10,0" />
                                        <Setter Property="BorderBrush" Value="#FF496FFF" />
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FontWeight" Value="Normal" />
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Margin" Value="0,0,0,5" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="15,5,15,5" />
                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="WiFi Name" Binding="{Binding ProfileName}" Width="*" />
                                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="StatusText" FontSize="16" Foreground="{DynamicResource PrimaryTextColor}"
 VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>


                </Border>

            </Grid>
        </Grid>

    </Border>
</Page>
