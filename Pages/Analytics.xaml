                                            <Image Source="/Assets/Store/22.png" Stretch="Uniform" Width="45" Height="45" VerticalAlignment="Top" HorizontalAlignment="Center" Panel.ZIndex="1" Margin="0,-30,0,0"/>

                                            <Button x:Name="OpenWebsiteButton21" Click="OpenWebsite21_Click" Width="200" FontSize="16" Style="{DynamicResource PrimaryButtonStyle1}" Content="Takbir" HorizontalAlignment="Center">

